<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_twelve"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/invoicesChoiceImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_sixteen"
        android:src="@mipmap/pay_uncheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/invoicesMon_ll"
        android:layout_toRightOf="@+id/invoicesChoiceImg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_nine"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invoicesST_tv"
                android:layout_width="@dimen/dp_fourteen"
                android:layout_height="@dimen/dp_fourteen"
                android:layout_gravity="center_vertical"
                android:background="@drawable/theme_circle_bg"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_eight" />

            <TextView
                style="@style/txtBlack"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_five"
                android:text="@string/oLOrderNum"
                android:textColor="@color/colorOrderNum"
                android:textSize="@dimen/sp_twelve" />

            <TextView
                android:id="@+id/invoicesONum_tv"
                style="@style/txtBlack"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_three"
                android:text="26989859393034"
                android:textColor="@color/colorOrderNum"
                android:textSize="@dimen/sp_twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_eight"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/orderdown_time" />

            <TextView
                android:id="@+id/invoicesOTime_tv"
                style="@style/txtBlack"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_five"
                android:text="2016-05-12 11:49"
                android:textSize="@dimen/sp_thirteen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_nine"
            android:layout_marginTop="@dimen/dp_eight"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/orderdown_locate" />

            <TextView
                android:id="@+id/invoicesLocate_tv"
                style="@style/txtBlack"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_five"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="ICON·大源国际中心"
                android:textSize="@dimen/sp_thirteen" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/invoicesMon_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_sixteen"
        android:layout_marginLeft="@dimen/dp_sixteen"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <TextView
            style="@style/txtBlack"
            android:textSize="@dimen/sp_thirteen"
            android:text="@string/moneyTitle"/>
        <TextView
            android:id="@+id/invoicesMoney_tv"
            style="@style/txtBlack"
            android:textSize="@dimen/sp_thirteen"
            android:textColor="@color/themeColor"
            android:layout_marginLeft="@dimen/dp_two"
            android:text=""/>
    </LinearLayout>
</RelativeLayout>
