<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/finishImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/insuranceTxt_ll"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_eight"
        android:src="@mipmap/insurance_cancel" />

    <LinearLayout
        android:id="@+id/insuranceTxt_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_sixteen"
        android:layout_marginRight="@dimen/dp_sixteen"
        android:background="@drawable/white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/insuranceTxt_tv"
            style="@style/txtBlack"
            android:layout_marginBottom="@dimen/dp_sixteen"
            android:layout_marginLeft="@dimen/dp_twenty_two"
            android:layout_marginRight="@dimen/dp_twenty_two"
            android:layout_marginTop="@dimen/dp_sixteen"
            android:lineSpacingExtra="@dimen/dp_six"
            android:textSize="@dimen/sp_twelve" />

    </LinearLayout>

    <WebView
        android:id="@+id/insuranceWv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></WebView>
</RelativeLayout>
