<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_sixteen"
        android:layout_marginRight="@dimen/dp_sixteen"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_bg">
            <TextView
                android:id="@+id/select_album_take_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_forty_eight"
                android:text="@string/select_album_take_photo"
                android:textColor="@color/colorBTxt"
                android:textSize="@dimen/sp_fifteen"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_zero_five"
                android:background="@color/colorLine"/>

            <TextView
                android:id="@+id/select_album_photo_gallery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_forty_eight"
                android:text="@string/select_album_photo_gallery"
                android:textColor="@color/colorBTxt"
                android:textSize="@dimen/sp_fifteen"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/select_album_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_eight"
            android:text="@string/cancel"
            android:textSize="@dimen/sp_fifteen"
            android:background="@drawable/white_bg"
            android:layout_marginTop="@dimen/dp_twelve"
            android:layout_marginBottom="@dimen/dp_twelve"
            android:textColor="@color/redColor"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
