<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/main_head_bg"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_two"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="@dimen/dp_thirty_three"
                android:layout_height="@dimen/dp_thirty_three"
                android:layout_centerInParent="true"
                android:background="@drawable/white_circle_bg" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/pinHeaded_img"
                android:layout_width="@dimen/dp_thirty_one"
                android:layout_height="@dimen/dp_thirty_one"
                android:layout_centerInParent="true"
                android:src="@mipmap/head_default"
                app:riv_oval="true" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
