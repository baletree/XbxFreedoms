<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBg"
    android:orientation="vertical">

    <include layout="@layout/page_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_sixteen"
        android:background="@drawable/border_topbottom_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_sixteen"
        android:paddingRight="@dimen/dp_sixteen">
        <RelativeLayout
            android:id="@+id/settingInsurer_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_five">

            <TextView
                style="@style/txtBlack"
                android:layout_centerVertical="true"
                android:text="@string/settingInsurer" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLine" />
        <RelativeLayout
            android:id="@+id/settingContacts_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_five">

            <TextView
                style="@style/txtBlack"
                android:layout_centerVertical="true"
                android:text="@string/settingContacts" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_sixteen"
        android:background="@drawable/border_topbottom_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_sixteen"
        android:paddingRight="@dimen/dp_sixteen">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLine"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/settingInvoice_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_five"
            android:visibility="gone">

            <TextView
                style="@style/txtBlack"
                android:layout_centerVertical="true"
                android:text="@string/settingInvoice" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settingGuide_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_five">

            <TextView
                style="@style/txtBlack"
                android:layout_centerVertical="true"
                android:text="@string/settingGuide" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/settingProvision_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_five">

            <TextView
                style="@style/txtBlack"
                android:layout_centerVertical="true"
                android:text="@string/settingProvision" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLine" />
        <RelativeLayout
            android:id="@+id/settingAboutUs_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_five">

            <TextView
                style="@style/txtBlack"
                android:layout_centerVertical="true"
                android:text="@string/aboutUsTitle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/settingSub_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_forty_eight"
        android:layout_margin="@dimen/dp_sixteen"
        android:background="@drawable/theme_rectangle_bg"
        android:text="@string/settingExit"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_fourteen" />
</LinearLayout>
