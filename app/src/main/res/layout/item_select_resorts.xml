<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_twelve"
    android:paddingRight="@dimen/dp_fourteen"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_thirty"
        android:orientation="horizontal"
        android:background="@drawable/border_input_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/resorts_select"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_eight"/>
        <TextView
            android:id="@+id/resortsNameTv"
            style="@style/txtBlack"
            android:text=""
            android:textSize="@dimen/sp_twelve"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_six"
            android:layout_marginRight="@dimen/dp_eight"/>
    </RelativeLayout>
</LinearLayout>
