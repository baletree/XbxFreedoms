<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/dp_hundred"
            android:layout_height="@dimen/dp_hundred">

            <ImageView
                android:id="@+id/dialogImg"
                android:layout_width="@dimen/dp_seventy_five"
                android:layout_height="@dimen/dp_seventy_five"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialogCount_tv"
                    style="@style/txtBlack"
                    android:text="60"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_twenty_four" />

                <TextView
                    style="@style/txtBlack"
                    android:text="s"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_eighteen" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            style="@style/txtBlack"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_twelve"
            android:text="@string/callOrder"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pressLongCancel_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_sixty_four"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/cancel_call" />

        <TextView
            style="@style/txtBlack"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_eight"
            android:text="@string/callLongPress"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</RelativeLayout>
