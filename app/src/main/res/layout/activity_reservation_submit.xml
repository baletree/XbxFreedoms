<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBg"
    android:orientation="vertical">

    <include layout="@layout/page_title" />

    <LinearLayout
        android:id="@+id/reservationSuccessLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_seventy"
            android:src="@mipmap/icon_chenggong" />

        <TextView
            style="@style/txtBlack"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_thirty"
            android:text="@string/reservationSubmitSuccess"
            android:textSize="@dimen/sp_eighteen" />

        <TextView
            style="@style/txtGray"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_twelve"
            android:text="@string/reservationSubmitSuccess"
            android:textSize="@dimen/sp_twelve" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_thirty_two"
            android:layout_marginRight="@dimen/dp_thirty_two"
            android:layout_marginTop="@dimen/dp_ninety"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reservationSubmitBackHome"
                style="@style/myBtnStyle"
                android:layout_marginRight="@dimen/dp_fifteen"
                android:layout_weight="1"
                android:text="@string/reservationSubmitBackHome" />

            <Button
                android:id="@+id/reservationSubmitLookOrder"
                style="@style/myBtnStyle"
                android:layout_marginLeft="@dimen/dp_fifteen"
                android:layout_weight="1"
                android:text="@string/reservationSubmitLookOrder" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reservationFailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_seventy"
            android:src="@mipmap/icon_gantan" />

        <TextView
            style="@style/txtBlack"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_thirty"
            android:text="@string/reservationSubmitFail"
            android:textSize="@dimen/sp_eighteen" />

        <TextView
            style="@style/txtGray"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_twelve"
            android:text="@string/reservationSubmitFailHint"
            android:textSize="@dimen/sp_twelve" />

        <Button
            android:id="@+id/reservationSubmitFailBackHome"
            style="@style/myBtnStyle"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_hundred_thirty"
            android:layout_marginTop="@dimen/dp_ninety"
            android:text="@string/reservationSubmitBackHome" />

    </LinearLayout>

</LinearLayout>
